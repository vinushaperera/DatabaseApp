<Page
    x:Class="DatabaseApp.ViewModels.SavingsDeposit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DatabaseApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="dDeposit_label" HorizontalAlignment="Left" Margin="34,38,0,0" TextWrapping="Wrap" Text="Deposit" VerticalAlignment="Top" FontSize="33.333"/>
        <TextBox x:Name="dAmount_box" HorizontalAlignment="Left" Margin="34,138,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="Amount" Width="330" InputScope="Number"/>
        <Button x:ConnectionId='1' x:Name="dDeposit_btn" Content="Deposit" HorizontalAlignment="Left" Margin="232,277,0,0" VerticalAlignment="Top"                           />
        <DatePicker x:Name="dDate_box" HorizontalAlignment="Left" Margin="34,202,0,0" VerticalAlignment="Top" Width="330"/>
        <Button x:ConnectionId='2' x:Name="dBack_btn" Content="Back" HorizontalAlignment="Left" Margin="73,277,0,0" VerticalAlignment="Top"                        />

    </Grid>
</Page>

