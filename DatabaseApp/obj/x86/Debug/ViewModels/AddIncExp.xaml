<Page
    x:Class="DatabaseApp.ViewModels.AddIncExp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DatabaseApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tBlock_heading" HorizontalAlignment="Left" Margin="26,27,0,0" TextWrapping="Wrap" Text="Add Transaction" VerticalAlignment="Top" FontSize="33.333" Height="40" Width="261"/>
        <TextBox x:Name="tName_box" HorizontalAlignment="Left" Margin="26,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="342" PlaceholderText="Transaction Name" Height="39"/>
        <TextBox x:Name="tAmount_box" HorizontalAlignment="Left" Margin="26,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="342" PlaceholderText="Transaction Amount" Height="39" InputScope="Number"/>
        <TextBox x:Name="tPerson_box" HorizontalAlignment="Left" Margin="26,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="342" PlaceholderText="Payer / Payee" Height="39"/>
        <RadioButton x:Name="tIncome_radio" Content="Income" HorizontalAlignment="Left" Margin="64,289,0,0" VerticalAlignment="Top" GroupName="trans_type"/>
        <RadioButton x:Name="tExpense_radio" Content="Expense" HorizontalAlignment="Left" Margin="222,289,0,0" VerticalAlignment="Top" Width="76" GroupName="trans_type"/>
        <TextBox x:Name="tDesc_box" HorizontalAlignment="Left" Margin="26,436,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="342" PlaceholderText="Description"/>
        <DatePicker x:Name="tDate_box" HorizontalAlignment="Left" Margin="26,493,0,0" VerticalAlignment="Top" Width="342"/>
        <Button x:ConnectionId='1' x:Name="tAdd_btn" Content="Add" HorizontalAlignment="Left" Margin="222,556,0,0" VerticalAlignment="Top"                       />
        <Button x:ConnectionId='2' x:Name="tCancel_btn" Content="Cancel" HorizontalAlignment="Left" Margin="64,556,0,0" VerticalAlignment="Top"                          />
        <ComboBox x:Name="testing_box" HorizontalAlignment="Left" Margin="26,356,0,0" VerticalAlignment="Top" Width="342">
            <ComboBoxItem Content="Cat 01"/>
        </ComboBox>

    </Grid>
</Page>

